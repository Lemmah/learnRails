<div class="modal fade" id="askQuestion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Ask a Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="email-address" class="col-form-label">Your Email Address:</label>
            <input type="email" class="form-control" id="email-address" required>
          </div>
          <div class="form-group">
            <label for="question-asked" class="col-form-label">Your Question:</label>
            <textarea class="form-control" id="question-asked" required></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" type="submit">Ask Question</button>
      </div>
    </div>
  </div>
</div>